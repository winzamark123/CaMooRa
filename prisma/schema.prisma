generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  clerkId String? @unique // Make optional

  profile Profile?
}

model Profile {
  id         String  @id @default(cuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String  @unique
  email      String? @unique // Make optional
  firstName  String? // Make optional
  lastName   String? // Make optional
  profilePic String?

  discord   String?
  instagram String?
  phone     String?
}
